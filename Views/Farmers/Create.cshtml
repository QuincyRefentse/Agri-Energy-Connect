@model AgriEnergyConnect.Models.Farmer

@{
    ViewData["Title"] = "Create Farmer";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Create New Farmer</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-md-6">
                    <label asp-for="FullName" class="form-label fw-semibold">Full Name</label>
                    <input asp-for="FullName" class="form-control shadow-sm" placeholder="e.g. John Mokoena" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <input asp-for="Email" class="form-control shadow-sm" placeholder="e.g. john@example.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control shadow-sm" placeholder="e.g. +27 71 234 5678" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Address" class="form-label fw-semibold">Address</label>
                    <input asp-for="Address" class="form-control shadow-sm" placeholder="e.g. 123 Farm Road, Limpopo" />
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <div class="col-12 d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success rounded-pill px-5">
                        <i class="bi bi-check-circle"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
