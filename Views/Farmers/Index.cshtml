@model IEnumerable<AgriEnergyConnect.Models.Farmer>

@{
    ViewData["Title"] = "Farmers";
}

<!-- Container -->
<div class="container mt-5">
    <!-- Card -->
    <div class="card shadow-lg border-0 rounded-4">
        <!-- Card Header -->
        <div class="card-header bg-success text-white rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="bi bi-people-fill me-2"></i> Farmers
            </h3>
            <a asp-action="Create" class="btn btn-light text-success border-success rounded-pill px-4">
                <i class="bi bi-plus-circle me-1"></i> Create New
            </a>
        </div>

        <!-- Card Body -->
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle-fill me-2"></i>No farmers found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle shadow-sm">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                                <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.FarmerId" class="btn btn-sm btn-warning rounded-pill me-1">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.FarmerId" class="btn btn-sm btn-info text-white rounded-pill me-1">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.FarmerId" class="btn btn-sm btn-danger rounded-pill">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
